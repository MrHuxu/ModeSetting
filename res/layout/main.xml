<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
>
    <!-- 定义了一个Spinner组件，
    指定该显示该Spinner组件的数组 -->
    <Spinner
        android:id="@+id/root"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:prompt="@string/title"
        android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <Button
        android:id="@+id/add"
        android:text="@string/add"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/root" android:layout_alignTop="@+id/root"/>
    <Button
            android:id="@+id/set"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/set"
            android:layout_toRightOf="@+id/add" android:layout_alignTop="@+id/root"/>
    <Button
            android:id="@+id/delete"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_alignParentRight="true" android:layout_alignTop="@+id/root"
            android:layout_toRightOf="@+id/set"/>
    <Button
        android:id="@+id/app"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/app"
        android:layout_below="@+id/set"
        android:layout_alignParentLeft="true"/>
</RelativeLayout>